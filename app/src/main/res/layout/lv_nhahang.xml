<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tvTenNhaHang"
                android:text="Tên nhà hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                />
                <TextView
                    android:id="@+id/tvDiaChiNhaHang"
                    android:text="Địa chỉ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/tvSoDienThoai"
                    android:text="Số điện thoại"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/tvGioMoCua"
                    android:text="Giờ mở cửa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="#1142F1"
                    android:textStyle="italic"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgEdit"
                        android:src="@drawable/edit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <ImageView
                        android:id="@+id/imgDelete"
                        android:src="@drawable/delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivAnhNen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hoasen"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>