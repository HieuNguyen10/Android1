<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ThemMoiNhaHang">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm nhà hàng mới"
                android:textAlignment="center"
                android:textSize="10pt"
                android:textStyle="bold|italic"/>

            <EditText
                android:id="@+id/edtMNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập vào mã nhà hàng"
                />

            <EditText
                android:id="@+id/edtTNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập vào tên nhà hàng"
                />

            <EditText
                android:id="@+id/edtDCNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập vào địa chỉ nhà hàng"
                />

            <EditText
                android:id="@+id/edtMTNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả nhà hàng"
                />

            <EditText
                android:id="@+id/edtSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Nhập vào số điện thoại"
                />

            <ImageView
                android:id="@+id/ivPic"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/hoasen"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/btnChonAnh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ mở cửa"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"/>
                <TimePicker
                    android:id="@+id/tpOpenHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ đóng cửa"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"/>
                <TimePicker
                    android:id="@+id/tpCloseHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnXN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"
                    android:backgroundTint="#2196F3"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnTL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hủy bỏ"
                    android:backgroundTint="#f11111"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>